<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="sap.codejam.controller.App">

    <App>
        <pages>
            <Page title="Bookshop">
                <content>
                    <Panel headerText="Hi, Please place your order">
                        <content>
                            <SearchField liveChange=".onSearch"/>
                            <Table 
                                items="{/value}"
                                id="booksTable">
                                <columns>
                                    <Column>
                                        <Text text="Book" />
                                    </Column>
                                    <Column>
                                        <Text text="Author" />
                                    </Column>
                                    <Column>
                                        <Text text="Price" />
                                    </Column>
                                    <Column>
                                        <Text text="Stock" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem 
                                        vAlign="Middle"
                                        press=".onSelect"
                                        type="Active">
                                        <cells>
                                            <ObjectIdentifier
                                                title="{title}"/>
                                            <Text
                                                text="{author}" />
                                            <ObjectNumber
                                                number="{price}"
                                                unit="{currency_code}" />
                                            <ObjectStatus
                                                text="{stock}"
                                                state="{= ${stock} >= 20 ? 'Success' : ${stock} > 0 ? 'Warning' : 'Error' }"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                            <FlexBox direction="Column" class="sapUiMediumMarginTop">
                                <FlexBox alignItems="Center" justifyContent="End" class="orderControls" >
                                    <ObjectStatus id="orderStatus" text=""/>
                                    <Button text="Order" press=".onSubmitOrder" />
                                    <StepInput
                                        value="{userSelection>/selectedQuantity}"
                                        min="0"
                                        textAlign="Center"
                                        class="sapUiSmallMarginRight"
                                        max="{userSelection>/selectedModelData/stock}" />    
                                </FlexBox>        
                                <FlexBox direction="Column">
                                    <Title text="{userSelection>/selectedModelData/title}" />
                                    <Text text="{userSelection>/selectedModelData/descr}"
                                          class="sapUiSmallMarginTop"  />
                                </FlexBox>
                            </FlexBox>
                        </content>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>

</mvc:View>